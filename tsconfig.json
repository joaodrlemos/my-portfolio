{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "./src",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["styles/*"],
      "@redux/*": ["redux/*"],
      "@redux/features/*": ["redux/features/*"],
      "@data/*": ["data/*"],
      "@typings/*": ["typings/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.scss",
    "src/**/*.module.scss"
  ],
  "exclude": ["node_modules", "dist"]
}
